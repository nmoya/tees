<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="55px"
    android:gravity="left|center">

    <ImageView
        android:id="@+id/shirt_img_id"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="340dp"
        android:scaleType="centerCrop"

        android:src="@drawable/sample_shirt"/>

    <ImageView
        android:id="@+id/base_square_img_id"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/shirt_img_id"
        android:src="@drawable/base_square"/>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/store_img_id"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="45dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sample_store" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/shirt_img_id">
        <TextView
                android:id="@+id/url_label_id"
                android:layout_width="wrap_content"
                android:layout_height="16sp"
                android:text="threadless.com.br"
                android:textStyle="italic"
                android:textSize="13sp"
                android:textColor="#aaaaaa"
                android:layout_marginTop="42dp"
                android:layout_marginStart="44dp"/>

        <TextView
            android:id="@+id/price_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            android:textSize="20sp"
            android:textColor="#515151"
            android:text="$25"/>

        <ImageButton
            android:id="@+id/fav_img_id"
            android:background="@drawable/fav_off"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="34dp"/>
    </LinearLayout>

